# Description: Bootstrap powerpc[64] binaries of Rust package manager
# URL: https://www.rust-lang.org/
# Maintainer: cruxppc at gmail dot com

case $(uname -m) in
	ppc) ARCH=powerpc ;;
	ppc64) ARCH=powerpc64 ;;
	*) echo unknown arch!; exit 1 ;;
esac

name=cargo-bootstrap
version=0.58.0
release=1
source=(https://alpha.de.repo.voidlinux.org/distfiles/cargo-$version-$ARCH-unknown-linux-gnu.tar.xz
       )

build() {
	cd cargo-$version-powerpc*
	mkdir -p $PKG/usr/bin
	cp cargo/bin/cargo  $PKG/usr/bin
}
